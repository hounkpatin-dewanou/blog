{% extends 'base.html.twig' %}

{% block title %}Gestion des Articles — Blog Manager{% endblock %}

{% block body %}
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-4 mb-10">
        <div>
            <h1 class="text-3xl font-extrabold text-gray-900 tracking-tight">Mes Publications</h1>
            <p class="text-gray-500 mt-1">Gérez et éditez vos articles de blog.</p>
        </div>
        <a href="{{ path('app_post_new') }}" class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-xl text-white bg-indigo-600 hover:bg-indigo-700 shadow-sm transition-all transform hover:scale-105">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/></svg>
            Nouvel Article
        </a>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {% for post in posts %}
            <div class="group bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden hover:shadow-xl hover:border-indigo-200 transition-all duration-300">
                <div class="p-6">
                    <div class="flex items-center justify-between mb-4">
                        <span class="px-3 py-1 text-xs font-semibold text-indigo-600 bg-indigo-50 rounded-full">Article #{{ post.id }}</span>
                        <span class="text-xs text-gray-400 italic">
                            {{ post.createdAt ? post.createdAt|date('d/m/Y') : 'Date inconnue' }}
                        </span>
                    </div>

                    <h2 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-indigo-600 transition-colors">
                        {{ post.title }}
                    </h2>

                    <p class="text-gray-600 text-sm line-clamp-3 mb-6 leading-relaxed">
                        {{ post.content|striptags }}
                    </p>

                    <div class="flex items-center justify-between pt-6 border-t border-gray-50">
                        <a href="{{ path('app_post_show', {'id': post.id}) }}" class="text-sm font-bold text-indigo-600 hover:text-indigo-800 flex items-center">
                            Détails
                            <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/></svg>
                        </a>
                        
                        <div class="flex space-x-2">
                            {# BOUTON PARTAGE RAPIDE #}
                            <button onclick="copyLink('{{ url('app_post_share', {'id': post.id}) }}', this)" class="p-2 text-gray-400 hover:text-green-600 hover:bg-green-50 rounded-lg transition tooltip" title="Copier le lien public">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 100-5.368 3 3 0 000 5.368zm0 7.368a3 3 0 100 6 3 3 0 000-6z"/></svg>
                            </button>

                            <a href="{{ path('app_post_edit', {'id': post.id}) }}" class="p-2 text-gray-400 hover:text-amber-600 hover:bg-amber-50 rounded-lg transition">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/></svg>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-span-full py-20 bg-gray-50 rounded-3xl border-2 border-dashed border-gray-200 text-center">
                <h3 class="mt-2 text-sm font-medium text-gray-900">Aucun article</h3>
                <a href="{{ path('app_post_new') }}" class="mt-6 inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700">Créer maintenant</a>
            </div>
        {% endfor %}
    </div>
</div>

<script>
function copyLink(url, btn) {
    navigator.clipboard.writeText(url).then(() => {
        const originalHtml = btn.innerHTML;
        btn.innerHTML = '<svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>';
        setTimeout(() => { btn.innerHTML = originalHtml; }, 2000);
    });
}
</script>
{% endblock %}