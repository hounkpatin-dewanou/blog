{% extends 'base.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}

{% block body %}
<div class="bg-gray-50 min-h-screen pb-20">
    <div class="max-w-4xl mx-auto px-4 py-16">
        <div class="text-center mb-12">
            <h1 class="text-5xl font-black text-gray-900 mb-6 leading-tight">{{ post.title }}</h1>
            <div class="flex items-center justify-center space-x-4">
                <span class="h-px w-10 bg-indigo-200"></span>
                <p class="text-gray-500 uppercase tracking-widest text-xs font-bold">
                    Par {{ post.author.email|split('@')[0] }} • {{ post.createdAt|date('d/m/Y') }}
                </p>
                <span class="h-px w-10 bg-indigo-200"></span>
            </div>
        </div>

        <div class="bg-white p-8 md:p-16 rounded-3xl shadow-2xl border border-gray-100 text-gray-800 text-xl leading-relaxed font-serif">
            {{ post.content|nl2br }}
        </div>

        <div class="mt-16 text-center border-t border-gray-200 pt-10">
            <p class="text-gray-500 mb-4 italic">Cet article vous a plu ?</p>
            <a href="{{ path('app_register') }}" class="inline-flex items-center px-8 py-3 bg-indigo-600 text-white font-bold rounded-full hover:bg-indigo-700 transition transform hover:scale-105 shadow-lg">
                Créer mon propre blog sur Blog Manager
                <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/></svg>
            </a>
        </div>
    </div>
</div>
{% endblock %}