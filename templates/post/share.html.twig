{% extends 'base.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}

{% block body %}
<div class="max-w-4xl mx-auto px-4 py-16">
    <div class="text-center mb-12">
        <h1 class="text-5xl font-black text-gray-900 mb-6">{{ post.title }}</h1>
        <p class="text-gray-500 uppercase tracking-widest text-sm font-bold">
            Publié le {{ post.createdAt|date('d/m/Y') }}
        </p>
    </div>

    <div class="bg-white p-8 md:p-16 rounded-3xl shadow-2xl border border-gray-100 text-gray-800 text-xl leading-relaxed">
        {{ post.content|nl2br }}
    </div>

    <div class="mt-12 text-center">
        <a href="/" class="text-indigo-600 font-bold hover:underline">← Créer mon propre blog sur Blog Manager</a>
    </div>
</div>
{% endblock %}