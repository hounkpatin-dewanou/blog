{{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
    
    <div>
        {{ form_label(form.title, 'Titre de l\'article', {'label_attr': {'class': 'block text-sm font-bold text-gray-700 mb-2'}}) }}
        {{ form_widget(form.title, {'attr': {
            'class': 'block w-full px-4 py-3 rounded-xl border-2 border-gray-200 focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm transition-all outline-none',
            'placeholder': 'Ex: Comment débuter avec Symfony...'
        }}) }}
        <div class="text-red-500 text-xs mt-1 font-semibold">{{ form_errors(form.title) }}</div>
    </div>

    <div>
        {{ form_label(form.content, 'Contenu de l\'article', {'label_attr': {'class': 'block text-sm font-bold text-gray-700 mb-2'}}) }}
        {{ form_widget(form.content, {'attr': {
            'class': 'block w-full px-4 py-3 rounded-xl border-2 border-gray-200 focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm transition-all outline-none',
            'rows': '10',
            'placeholder': 'Écrivez votre texte ici...'
        }}) }}
        <div class="text-red-500 text-xs mt-1 font-semibold">{{ form_errors(form.content) }}</div>
    </div>

    {# IMPORTANT : Si createdAt est dans le formulaire, on le rend non-requis pour éviter de bloquer #}
    {% if form.createdAt is defined %}
        <div class="hidden">
            {{ form_widget(form.createdAt) }}
        </div>
    {% endif %}

    <div class="pt-4">
        <button type="submit" class="w-full flex justify-center py-4 px-6 border border-transparent rounded-xl shadow-lg text-lg font-bold text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none transition-all transform hover:-translate-y-1">
            {{ button_label|default('Publier l\'article maintenant') }}
        </button>
    </div>

{{ form_end(form) }}