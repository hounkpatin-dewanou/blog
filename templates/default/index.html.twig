{% extends 'base.html.twig' %}

{% block title %}Tableau de bord - Blog Manager{% endblock %}

{% block body %}
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
    
    {# Section Hero #}
    <div class="bg-indigo-900 rounded-3xl p-8 mb-12 flex flex-col md:flex-row items-center justify-between shadow-2xl overflow-hidden relative">
        <div class="md:w-1/2 z-10">
            <h1 class="text-4xl md:text-5xl font-extrabold text-white mb-4">
                Gérez votre contenu avec élégance.
            </h1>
            <p class="text-indigo-100 text-lg mb-8">
                Bienvenue sur votre Blog Manager. Rédigez, éditez et publiez vos idées en quelques clics.
            </p>
            {% if not app.user %}
                <a href="{{ path('app_register') }}" class="bg-white text-indigo-900 font-bold py-3 px-8 rounded-full hover:bg-indigo-50 transition transform hover:scale-105 inline-block">
                    Commencer maintenant
                </a>
            {% else %}
                <div class="space-y-4">
                    <p class="text-white font-medium italic">Content de vous revoir, {{ app.user.userIdentifier }} !</p>
                    <a href="{{ path('app_post_index') }}" class="bg-indigo-500 text-white font-bold py-3 px-6 rounded-xl hover:bg-indigo-400 transition inline-block border border-indigo-300">
                        Voir mes articles
                    </a>
                </div>
            {% endif %}
        </div>
        <div class="md:w-1/2 mt-8 md:mt-0 flex justify-center">
            <img src="https://images.unsplash.com/photo-1499750310107-5fef28a66643?auto=format&fit=crop&q=80&w=500" 
                 alt="Blog Station" class="rounded-2xl shadow-lg border-4 border-indigo-400 rotate-3">
        </div>
    </div>

    {# Dashboard Stats ou Articles #}
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-100">
            <h3 class="text-gray-400 text-xs font-bold uppercase tracking-wider mb-2">Total Articles</h3>
            <p class="text-3xl font-bold text-gray-800">12</p>
        </div>
        <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-100">
            <h3 class="text-gray-400 text-xs font-bold uppercase tracking-wider mb-2">Commentaires</h3>
            <p class="text-3xl font-bold text-gray-800">48</p>
        </div>
        <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-100">
            <div class="flex justify-between items-center">
                <h3 class="text-gray-400 text-xs font-bold uppercase tracking-wider">Statut</h3>
                <span class="flex h-3 w-3 rounded-full bg-green-500"></span>
            </div>
            <p class="text-3xl font-bold text-gray-800 italic">En ligne</p>
        </div>
    </div>

</div>
{% endblock %}