{% extends 'base.html.twig' %}

{% block title %}Créer un compte - Blog Manager{% endblock %}

{% block body %}
<div class="min-h-[80vh] flex items-center justify-center px-4 sm:px-6 lg:px-8 py-12">
    <div class="max-w-md w-full space-y-8 bg-white p-10 rounded-2xl shadow-xl border border-gray-100">
        
        {# En-tête #}
        <div class="text-center">
            <h1 class="text-3xl font-extrabold text-gray-900 tracking-tight">Rejoignez-nous !</h1>
            <p class="mt-2 text-sm text-gray-600">
                Déjà inscrit ? 
                <a href="{{ path('app_login') }}" class="font-medium text-indigo-600 hover:text-indigo-500 transition">
                    Connectez-vous ici
                </a>
            </p>
        </div>

        {# Affichage des erreurs globales #}
        {% if form_errors(registrationForm) %}
            <div class="bg-red-50 border-l-4 border-red-400 p-4 text-sm text-red-700">
                {{ form_errors(registrationForm) }}
            </div>
        {% endif %}

        {{ form_start(registrationForm, {'attr': {'class': 'mt-8 space-y-6'}}) }}
            
            <div class="space-y-4">
                {# Champ Email #}
                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-1">Adresse Email</label>
                    {{ form_widget(registrationForm.email, {
                        'attr': {
                            'class': 'appearance-none rounded-lg relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-400 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm',
                            'placeholder': 'votre@email.com'
                        }
                    }) }}
                    <div class="text-red-500 text-xs mt-1">{{ form_errors(registrationForm.email) }}</div>
                </div>

                {# Champ Mot de passe #}
                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-1">Mot de passe</label>
                    {{ form_widget(registrationForm.plainPassword, {
                        'attr': {
                            'class': 'appearance-none rounded-lg relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-400 text-gray-900 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm',
                            'placeholder': '••••••••'
                        }
                    }) }}
                    <div class="text-red-500 text-xs mt-1">{{ form_errors(registrationForm.plainPassword) }}</div>
                </div>

                {# Consentement #}
                <div class="flex items-start">
                    <div class="flex items-center h-5">
                        {{ form_widget(registrationForm.agreeTerms, {
                            'attr': {'class': 'focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300 rounded'}
                        }) }}
                    </div>
                    <div class="ml-3 text-sm">
                        <label for="{{ registrationForm.agreeTerms.vars.id }}" class="font-medium text-gray-700">
                            J'accepte les <a href="#" class="text-indigo-600 hover:underline">conditions d'utilisation</a>
                        </label>
                        <div class="text-red-500 text-xs mt-1">{{ form_errors(registrationForm.agreeTerms) }}</div>
                    </div>
                </div>
            </div>

            <div>
                <button type="submit" class="group relative w-full flex justify-center py-3 px-4 border border-transparent text-sm font-bold rounded-lg text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all shadow-lg hover:shadow-indigo-200">
                    Créer mon compte
                </button>
            </div>

        {{ form_end(registrationForm) }}
    </div>
</div>
{% endblock %}